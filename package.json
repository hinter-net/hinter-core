{
  "name": "hinter-core",
  "version": "0.1.1",
  "description": "Reference implementation of the hinter protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hinter-net/hinter-core"
  },
  "main": "index.js",
  "type": "module",
  "pear": {
    "name": "hinter-core",
    "type": "terminal"
  },
  "scripts": {
    "docker:build": "docker build -t bbenligiray/hinter-core:latest .",
    "docker:initialize": "docker run -it --rm -v./hinter-core-data:/hinter-core/hinter-core-data bbenligiray/hinter-core:latest npm run initialize",
    "docker:start": "docker run -it --rm --network host -v./hinter-core-data:/hinter-core/hinter-core-data bbenligiray/hinter-core:latest",
    "initialize": "node src/initialize.js",
    "start": "node src/index.js"
  },
  "dependencies": {
    "b4a": "^1.6.7",
    "corestore": "^7.4.5",
    "hyperdrive": "^12.3.0",
    "hyperswarm": "^4.11.7",
    "localdrive": "^2.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5"
  }
}
